<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tgljdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle3"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="12sp"
        android:textStyle="bold"/>/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/isichatt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/isichatt"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/wktchatt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/isichatt"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

            <TextView
                android:id="@+id/isichatt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/rectangle2"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wktchatt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isichatt2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/design_default_color_error"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isichatt2"
                android:layout_toLeftOf="@id/wktchatt2"
                android:layout_marginRight="5dp"
                android:textColor="@color/design_default_color_error"
                android:textSize="12sp"
                android:textStyle="bold" />

</RelativeLayout>