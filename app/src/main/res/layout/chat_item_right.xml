<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:paddingEnd="@dimen/margin_small"
        android:gravity="end"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/shape_message_saya_red"
            android:fontFamily="@font/popin"
            android:padding="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_large"
            android:text="Ya, silahkan Terserah bapak..!"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_default" />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tv_show_message"
            android:background="@null"
            android:src="@drawable/ic_ekor_chat_kanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/popin"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_alignParentEnd="true"
            android:text="Dibaca"
            android:textSize="@dimen/font_size_tiny"
            android:layout_below="@id/tv_show_message"
            android:id="@+id/tv_seen"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>