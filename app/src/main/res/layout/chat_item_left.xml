<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
    android:paddingStart="@dimen/margin_small"
    android:layout_width="320dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginStart="@dimen/margin_small"
        android:id="@+id/tv_show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/shape_message_lawan_grey"
        android:fontFamily="@font/popin"
        android:padding="@dimen/margin_small"
        android:text="Ya, silahkan Terserah bapak..!"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_default" />
    <ImageButton
        android:layout_alignBottom="@id/tv_show_message"
        android:background="@null"
        android:src="@drawable/ic_ekor_chat_kiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="seen"
        android:layout_below="@id/tv_show_message"
        android:id="@+id/tv_seen"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>