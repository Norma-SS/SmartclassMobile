<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_constraint_outline"
    android:layout_marginBottom="15dp"
    >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_Meet_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:padding="10dp"
            android:src="@drawable/profile"
            app:civ_border_color="@color/textStyle"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Meet_nama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Nama Guru : "
            android:textColor="@color/textStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_Meet_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_Meet_photo" />

        <TextView
            android:id="@+id/tv_Meet_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Kode Ruangan : "
            android:textColor="@color/textStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_Meet_nama"
            app:layout_constraintTop_toBottomOf="@+id/tv_Meet_nama" />

</androidx.constraintlayout.widget.ConstraintLayout>