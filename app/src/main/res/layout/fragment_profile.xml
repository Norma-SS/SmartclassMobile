<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#BEE4FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        tools:context=".tampilan"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/edit_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/poppin_bold" />

        <ImageView
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_wallpaper"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_Meet_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/wallpaper"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-70dp"
            android:padding="10dp"
            android:src="@drawable/profile"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_Meet_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="225dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp"
            android:src="@drawable/ic_baseline_camera_alt_24" />

        <TextView
            android:id="@+id/Namax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_Meet_photo"
            android:gravity="center_horizontal"
            android:text="Nama Pengguna"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppinsbold"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Sttsx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Namax"
            android:gravity="center_horizontal"
            android:text="Status"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppinslight"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Klsx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sttsx"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinslight"
            android:gravity="center_horizontal"
            android:text="Kelas"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Sklx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Klsx"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="Nama Sekolah"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppinslight" />

        <TextView
            android:id="@+id/data_lainnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sklx"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Data Lainnya"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_lainnya"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinslight"
            android:gravity="center_horizontal"
            android:text="E-mail"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:enabled="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="null" />

        <TextView
            android:id="@+id/tv_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppinslight"
            android:gravity="center_horizontal"
            android:text="Mobile Number"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hp"
            android:enabled="false"
            android:inputType="number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="null" />

        <TextView
            android:id="@+id/tv_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_hp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppinslight"
            android:gravity="center_horizontal"
            android:text="Password"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pw"
            android:enabled="false"
            android:inputType="textPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="null" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pw"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Log Out"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>